---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const tools = (await getCollection('tools')).sort(
	(a, b) => b.data.createdAt.valueOf() - a.data.createdAt.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gray-50 text-gray-900">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-8">
			<div class="text-center mb-12">
				<h1 class="text-4xl font-bold mb-4">AIHunt.dev</h1>
				<p class="text-lg text-gray-600">
					Find the best developer AI tools for your next project.
				</p>
			</div>
			<div class="grid gap-6 md:grid-cols-2">
				{
					tools.map((tool) => (
						<a
							href={`/tools/${tool.id}/`}
							class="block p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow no-underline"
						>
							{tool.data.logo && (
								<img
									src={tool.data.logo}
									alt={tool.data.title}
									class="h-12 w-12 rounded-lg mb-4"
								/>
							)}
							<h2 class="text-xl font-semibold text-gray-900 mb-2">{tool.data.title}</h2>
							<p class="text-gray-600 text-sm mb-2">{tool.data.description}</p>
							<FormattedDate date={tool.data.createdAt} />
						</a>
					))
				}
			</div>
		</main>
		<Footer />
	</body>
</html>
