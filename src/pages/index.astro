---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const tools = (await getCollection('tools')).sort(
	(a, b) => b.data.createdAt.valueOf() - a.data.createdAt.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gray-50 text-gray-900">
		<Header />
		<main class="max-w-6xl mx-auto px-4 py-8">
			<div class="text-center mb-12">
				<h1 class="text-4xl font-bold mb-4">AIHunt.dev</h1>
				<p class="text-lg text-gray-600">
					Find the best developer AI tools for your next project.
				</p>
			</div>
			<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
				{
					tools.map((tool) => (
						<div class="group relative p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
							<a href={`/tools/${tool.id}/`} class="absolute inset-0 z-0" aria-label={tool.data.title}></a>
							<div class="flex gap-4 mb-3">
								{tool.data.logo && (
									<img
										src={tool.data.logo}
										alt={tool.data.title}
										class="h-12 w-12 rounded-lg flex-shrink-0"
										loading="lazy"
									/>
								)}
								<div class="min-w-0">
									<div class="flex items-center gap-2">
										<span class="text-lg font-semibold text-gray-900">
											{tool.data.title}
										</span>
										{tool.data.website && (
											<a
												href={`${tool.data.website}${tool.data.website.includes('?') ? '&' : '?'}ref=aihuntdev`}
												target="_blank"
												rel="noopener noreferrer"
												class="relative z-10 opacity-0 group-hover:opacity-100 transition-opacity text-gray-400 hover:text-gray-600"
												title="Visit website"
											>
												<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
												</svg>
											</a>
										)}
									</div>
									{tool.data.category && tool.data.category.length > 0 && (
										<div class="flex flex-wrap gap-1 mt-1">
											{tool.data.category.slice(0, 3).map((cat) => (
												<span class="bg-gray-100 text-gray-600 px-2 py-0.5 rounded text-xs">
													{cat}
												</span>
											))}
										</div>
									)}
								</div>
							</div>
							<p class="text-gray-600 text-sm">{tool.data.description}</p>
						</div>
					))
				}
			</div>
		</main>
		<Footer />
	</body>
</html>
